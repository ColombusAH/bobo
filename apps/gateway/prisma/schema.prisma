// Gateway Service - Authentication & Authorization Domain
// Database: gateway_db

generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/client-gateway"
}

datasource db {
  provider = "postgresql"
  url      = env("GATEWAY_DATABASE_URL")
}

// ============================================
// TENANTS (Multi-tenant SaaS)
// ============================================
model Tenant {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  domain    String?  @unique
  plan      TenantPlan @default(FREE)
  isActive  Boolean  @default(true) @map("is_active")
  
  // Settings
  settings  Json?    @default("{}")
  
  // Audit fields
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  
  // Relations
  users     User[]
  tenantUsers TenantUser[]
  
  @@map("tenants")
  @@index([slug])
  @@index([isActive])
}

enum TenantPlan {
  FREE
  STARTER
  PROFESSIONAL
  ENTERPRISE
}

// ============================================
// USERS
// ============================================
model User {
  id            String   @id @default(uuid())
  email         String   @unique
  emailVerified Boolean  @default(false) @map("email_verified")
  
  // Password (nullable for OAuth-only users)
  passwordHash  String?  @map("password_hash")
  salt          String?
  
  // Profile
  firstName     String?  @map("first_name")
  lastName      String?  @map("last_name")
  avatarUrl     String?  @map("avatar_url")
  phoneNumber   String?  @map("phone_number")
  
  // Status
  isActive      Boolean  @default(true) @map("is_active")
  isVerified    Boolean  @default(false) @map("is_verified")
  
  // Default tenant
  defaultTenantId String? @map("default_tenant_id")
  defaultTenant   Tenant? @relation(fields: [defaultTenantId], references: [id])
  
  // Audit fields
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  deletedAt     DateTime? @map("deleted_at")
  lastLoginAt   DateTime? @map("last_login_at")
  
  // Relations
  sessions      Session[]
  refreshTokens RefreshToken[]
  oauthAccounts OAuthAccount[]
  tenantUsers   TenantUser[]
  passwordResets PasswordReset[]
  
  @@map("users")
  @@index([email])
  @@index([isActive])
}

// ============================================
// TENANT USERS (Many-to-Many with roles)
// ============================================
model TenantUser {
  id        String   @id @default(uuid())
  tenantId  String   @map("tenant_id")
  userId    String   @map("user_id")
  role      TenantRole @default(MEMBER)
  
  // Permissions (JSON array of permission strings)
  permissions Json?  @default("[]")
  
  // Status
  isActive  Boolean  @default(true) @map("is_active")
  
  // Audit
  invitedBy String?  @map("invited_by")
  invitedAt DateTime? @map("invited_at")
  joinedAt  DateTime @default(now()) @map("joined_at")
  
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([tenantId, userId])
  @@map("tenant_users")
  @@index([userId])
  @@index([tenantId, role])
}

enum TenantRole {
  OWNER
  ADMIN
  MEMBER
  GUEST
}

// ============================================
// OAUTH ACCOUNTS
// ============================================
model OAuthAccount {
  id            String   @id @default(uuid())
  userId        String   @map("user_id")
  provider      OAuthProvider
  providerAccountId String @map("provider_account_id")
  
  // OAuth tokens
  accessToken   String?  @map("access_token") @db.Text
  refreshToken  String?  @map("refresh_token") @db.Text
  expiresAt     DateTime? @map("expires_at")
  
  // Profile data
  scope         String?
  tokenType     String?  @map("token_type")
  idToken       String?  @map("id_token") @db.Text
  
  // Audit
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
  @@map("oauth_accounts")
  @@index([userId])
}

enum OAuthProvider {
  GOOGLE
  GITHUB
  MICROSOFT
}

// ============================================
// SESSIONS (Active sessions tracked in DB + Redis)
// ============================================
model Session {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  tenantId    String?  @map("tenant_id")
  
  // Session token (hashed)
  tokenHash   String   @unique @map("token_hash")
  
  // Session metadata
  ipAddress   String?  @map("ip_address")
  userAgent   String?  @map("user_agent")
  deviceId    String?  @map("device_id")
  
  // Expiration
  expiresAt   DateTime @map("expires_at")
  
  // Audit
  createdAt   DateTime @default(now()) @map("created_at")
  lastUsedAt  DateTime @default(now()) @map("last_used_at")
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("sessions")
  @@index([userId])
  @@index([tokenHash])
  @@index([expiresAt])
}

// ============================================
// REFRESH TOKENS
// ============================================
model RefreshToken {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  tenantId    String?  @map("tenant_id")
  
  // Token (hashed)
  tokenHash   String   @unique @map("token_hash")
  
  // Metadata
  ipAddress   String?  @map("ip_address")
  userAgent   String?  @map("user_agent")
  
  // Status
  isRevoked   Boolean  @default(false) @map("is_revoked")
  revokedAt   DateTime? @map("revoked_at")
  
  // Expiration
  expiresAt   DateTime @map("expires_at")
  
  // Audit
  createdAt   DateTime @default(now()) @map("created_at")
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("refresh_tokens")
  @@index([userId])
  @@index([tokenHash])
  @@index([expiresAt])
}

// ============================================
// PASSWORD RESETS
// ============================================
model PasswordReset {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  
  // Token (hashed)
  tokenHash   String   @unique @map("token_hash")
  
  // Status
  isUsed      Boolean  @default(false) @map("is_used")
  usedAt      DateTime? @map("used_at")
  
  // Expiration
  expiresAt   DateTime @map("expires_at")
  
  // Audit
  createdAt   DateTime @default(now()) @map("created_at")
  ipAddress   String?  @map("ip_address")
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("password_resets")
  @@index([tokenHash])
  @@index([userId])
  @@index([expiresAt])
}

